{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
  },
  "include": [
    "src/library/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/demo/**/*"
  ]
}
